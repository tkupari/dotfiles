# !/bin/bash

DIR=${1:-$PWD}
BASENAME=$(basename $DIR)
echo $BASENAME

if ! tmux has-session -t $BASENAME; then
  echo creating session
  pushd $DIR
  tmux new-session -s $BASENAME -d
fi

if [ -n "$TMUX" ]; then
  echo already in tmux
  tmux switch-client -t $BASENAME
else
  echo not in tmux
  tmux attach-session -t $BASENAME
fi
